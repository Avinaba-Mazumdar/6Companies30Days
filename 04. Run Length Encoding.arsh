string encode(string src){
    string ans;
    int n = src.size();
    
    for(int i=0; i<n; ){
        int cnt = 1;
        char cur = src[i++];
        while(i<n and src[i]==cur) { cnt++; i++; }
        
        ans += cur + to_string(cnt);
    }
    
    return ans;
}

// String
// TC: O(N)
// SC: O(1)